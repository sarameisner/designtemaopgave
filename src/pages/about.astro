---

import BaseLayout from "../layouts/BaseLayout.astro";
import Background from "../components/Background.astro";
import EmployeeSection from "../components/EmployeeSection.astro";
const employeeData = await fetch("https://raw.githubusercontent.com/sarameisner/frontend-design/main/resources/json/employees.json").then((res) => res.json());
const FirstThreeEmployess = employeeData.slice(0,3);

import CoreValues from "../components/CoreValues.astro";
const coreValues = await fetch("https://raw.githubusercontent.com/sarameisner/frontend-design/main/resources/json/corevalues.json").then((res) => res.json());

import Harmonica from "../components/Harmonica.astro";
---

<BaseLayout title="About">
    <Background surface="about" tag="SERVICE" headline="Creative Services For Boost Your Business Growth"/>
    <CoreValues coreValues={coreValues} surface="secondary" tag="GROWING WITH OUR CLIENT" heading="Our core values & principles" button="Get in touch" description="Capitalize on low hanging fruit to identify a ballpark value added activity beta test. Override the digital divide with additional from DevOps."/>
    <EmployeeSection data={FirstThreeEmployess} tag="Our team" heading="We champion the bold to achieve the extraordinary" description="Ippsum is the result of synergy between our teams and our customers. Our company culture is focused on excellent productivity, customer satisfaction, respect for team"./>
    <Harmonica />
    
</BaseLayout>
<style>
    html {
        overflow-x: hidden;
    }
</style>