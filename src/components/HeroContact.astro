---
import { Icon } from 'astro-icon/components';
---

<div class="hero-contact">
    <div class="text-wrapper">
        <p class="tag">PROCESS</p>
        <h2>Contact Us. It's Easy.</h2>
        <p class="text">Leverage agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative.</p>
        <div class="contact-info">
            <div class="icon-text">
                <Icon name="phone" />
                <div class="text">
                    <p>Call Today</p>
                    <p class="font-large">+1 800 100 900</p>
                </div>
            </div>
            <div class="icon-text">
                <Icon name="clock" />
                <div class="text">
                    <p>Monday To Friday</p>
                    <p class="font-large">9AM - 5PM</p>
                </div>
            </div>
            <div class="icon-text">
                <Icon name="pin" />
                <div class="text">
                    <p>USA Office</p>
                    <p class="font-large">195 Devonshire St Boston, MA 02110</p>
                </div>
            </div>
        </div>
    </div>
    <div class="img-wrapper">
        <img src="../src/assets/images/contact1.jpg" alt="Contact image 1" />
        <img src="../src/assets/images/contact2.jpg" alt="Contact image 2" />
        <img src="../src/assets/images/contact3.jpg" alt="Contact image 3" />
    </div>
</div>

<style>
@layer components {
    .hero-contact {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 3rem;
        padding: 2rem;
    }

    .text-wrapper {
        flex: 1;
        max-width: 600px;
    }

    .tag {
        padding: 0.5rem 1rem;
        background: var(--primary-color-01); 
        display: inline-block;
        border-radius: 20px;
        margin-bottom: 1rem;
        color: var(--primary-color-03); 
    }

    h2 {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: var(--primary-color-03); 
    }

    .text {
        margin-bottom: 2rem;
        color: var(--primary-color-03); 
    }

    .contact-info {
        display: grid;
        gap: 1.5rem;
    }

    .icon-text {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .icon-text svg {
        width: 2rem;
        height: 2rem;
        color: var(--primary-color-01);
    }

    .font-large {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--primary-color-03); 
    }

    .img-wrapper {
        display: grid;
        grid-template-columns: 1fr 1fr;
        grid-template-rows: repeat(2, 1fr);
        gap: 1rem;
        flex: 1;
    }

    .img-wrapper img {
        border-radius: 20px;
        object-fit: cover;
        width: 100%;
        height: 100%;

    
    }

    .img-wrapper img:first-child {
        grid-row: 1 / span 2;
    }

    @media (max-width: 768px) {
        .hero-contact {
            padding: 1.5rem;
            gap: 2rem;
        }

        h2 {
            font-size: 1.75rem;
        }

        .icon-text {
            gap: 0.75rem;
        }

        .icon-text svg {
            width: 1.5rem;
            height: 1.5rem;
        }

        .font-large {
            font-size: 1rem;
        }

        .img-wrapper img {
            height: auto;
        }
    }
}
</style>