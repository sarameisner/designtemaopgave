---

<button popovertarget="popup" class="loginbtn">Login</button>

<div popover id="popup">
  <h4>Dashboard Login</h4>
  <form action="/submit-form" method="POST">
    <input value="Enter Email" type="text" name="name" required />

    <input value="Enter Password" type="email" name="email" required />

    <input class="submit" type="submit" value="Submit" name="Show Dashboard" />
  </form>
</div>

<style>
  [popover]::backdrop {
    background: #0004;
    backdrop-filter: blur(16px);
  }

   .loginbtn {
   background-color: var(--primary-color-01);
   font-size: 1rem;
   padding: 4px 16px;
   border-radius: 20px;
   border: 2px solid transparent;
   cursor: pointer;
   transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease;
  }

  .submit {
    background-color: #ffcc4a;
  }
  label {
    display: flex;
    width: 382px;
    padding: 24px 33px;
    flex-direction: column;
    align-items: flex-start;
    gap: 10px;
    border-radius: 54px;
    border: 1px solid #e3e3e3;
    background: #fff;
  }

  input {
    border-radius: 100px;
    background: var(--secondary-color-02);
    padding: 18px;
    z-index: 10;
  }

  #popup {
    min-width: 750px;
    padding: 40px 60px 60px 60px;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 10px;
    background: rgba(0, 0, 0, 0.5);
    &:popover-open {
      display: flex;
    }

    h4 {
      color: #fff;
      text-align: center;
      font-family: Cabin;
      font-size: 45px;
      font-style: normal;
      font-weight: 700;
      line-height: 116%; /* 52.2px */
    }
  }
</style>