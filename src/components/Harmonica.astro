<style>
@layer components {

  p {
    color: var(--primary-color-03);
    font-family: "Lato";
    font-size: 1rem;
    max-width: 65ch;
  }

  h5 {
    background-color: var(--primary-color-02);
    border-radius: 1.25rem;
    color: var(--secondary-color-02);
    padding: 0.5rem 1rem;
    width: fit-content;
    justify-self: center;
    margin-bottom: 1.5rem;
  }

  h2 {
    color: var(--primary-color-03);
   
  }
.faq-header {
    display: flex;
    flex-direction: column;
    align-items: center; 
    margin-bottom: 2rem; 
  }
  summary::marker,
  summary::-webkit-details-marker {
    content: '';
    display: none;
  }

  summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-family: Cabin;
    font-size: 1.25rem;
    font-weight: 600;
    padding: 1rem 0;
    border-bottom: 1px solid var(--secondary-color-01);
  }

  summary h4 {
    font-size: 1rem;
    margin: 0;
  }

  summary svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  details[open] summary svg {
    transform: rotate(45deg);
  }

  details {
    width: 100%; 
    max-width: 100%; 
    margin: 0 auto;
    padding: 1rem 0;
    border-bottom: 1px solid var(--secondary-color-01);
    transition: all 0.4s ease;
  }

  details article {
    padding: 1rem 0;
    color: var(--primary-color-03);
    font-family: "Lato";
    opacity: 0;
    height: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, height 0.3s ease;
  }

  details[open] article {
    opacity: 1;
    height: auto;
    visibility: visible;
  }

  .faq-wrapper {
    background: var(--secondary-color-01);
    border-radius: 1.875rem;
    padding: 4.375rem 6.875rem;
    display: grid;
    grid-template-columns: 1fr;
    margin: 0 auto;
    max-width: 80%; 
    align-items: center;
    justify-items: center;
  }

  section {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 5rem 0;
    min-height: 100vh;
    box-sizing: border-box;
  }

  summary svg {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  details[open] summary svg {
    transform: rotate(135deg); 
  }

  @media (max-width: 50rem) { 
    .faq-wrapper {
      padding: 3.125rem 2.5rem;
      max-width: 90%;
    }

    section {
      padding: 3rem 0;
    }
  }
}
</style>